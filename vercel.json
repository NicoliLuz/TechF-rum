{
  "version": 2,
  "builds": [
    {
      "src": "back/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "front/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "back/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "front/$1"
    }
  ],
  "rewrites": [
    { "source": "/pomodoro/:asset*", "destination": "https://pomodoro-murex.vercel.app/:asset*" },
    { "source": "/(.*)", "destination": "/" }
  ]
}